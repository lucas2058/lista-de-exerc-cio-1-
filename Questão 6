#include <stdio.h>

int main() {
    float tempo, velocidade_media, distancia, litros_usados;
    const float consumo = 12.0;  // Consumo do carro em Km por litro

    printf("Informe o tempo gasto na viagem (em horas): ");
    scanf("%f", &tempo);

    printf("Informe a velocidade média durante a viagem (em Km/h): ");
    scanf("%f", &velocidade_media);

    distancia = tempo * velocidade_media;

    litros_usados = distancia / consumo;

    printf("A quantidade de litros de gasolina utilizados na viagem é: %.2f litros\n", litros_usados);

    return 0;
}
