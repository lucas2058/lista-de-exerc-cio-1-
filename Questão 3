#include <stdio.h>
#include <math.h>  

int main() {
    float num1, num2;
    float produto_dobro, soma_triplo_metade, raiz_quadrada;

    printf("Informe o primeiro número real: ");
    scanf("%f", &num1);

    printf("Informe o segundo número real: ");
    scanf("%f", &num2);

    produto_dobro = 2 * num1 * num2;

    soma_triplo_metade = 3 * num1 + (num2 / 2);

    raiz_quadrada = sqrt(num1 + num2);

    printf("Produto do dobro do primeiro número: %.2f\n", produto_dobro);
    printf("Soma do triplo do primeiro número com a metade do segundo: %.2f\n", soma_triplo_metade);
    printf("Raiz quadrada da soma do primeiro número com o segundo: %.2f\n", raiz_quadrada);

    return 0;
}
